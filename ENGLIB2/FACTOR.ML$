	JMP L000001
S000000
	ENTER 0,1,L000002
	PUSHS 'PI x 10**4 = '
	SVC  2
	SVC  4
	SVC  1
	SVC  3
	LEAVE
	RET
L000002 EQU 0
S000001
	ENTER 1,1,L000003
	PUSHR 1,-1
	PUSHI 1
	CMPLE
	JZ L000004
	PUSHI 1
	STORE 0,5
	JMP L000005
L000004
	PUSHR 1,-1
	PUSHI 1
	SUB
	CALL S000001
	PUSHR 1,-1
	MUL
	STORE 0,5
L000005
	LEAVE
	RETF 0,5
L000003 EQU 0
CLASS_A
	ENTER 0,1,L000006
	JMP L000007
L000007
	PUSHS 'Let's test recursion and looping'
	SVC  2
	SVC  3
	PUSHS '---------------------'
	SVC  2
	SVC  3
	PUSHI 1
	STORE 1,5
	JMP L000008
L000009
	PUSHR 1,5
	INC 1,5
	PUSHI 7
	CJE L000010
L000008
	PUSHR 1,5
	SVC  1
	PUSHS ' factorial = '
	SVC  2
	PUSHR 1,5
	CALL S000001
	SVC  1
	SVC  3
	PUSHS '---------------------'
	SVC  2
	SVC  3
	JMP L000009
L000010
	PUSHS 'Now let's test an intrinsic function: pi'
	SVC  2
	SVC  3
	CALL S000000
	LEAVE
	RET
L000006 EQU 1
L000001
	INIT 1
	ENTER 3,0,1
	PUSHI -1
	PUSHR 0,-3
	PUSHI 65
	CJE CLASS_A
	RET
	END
